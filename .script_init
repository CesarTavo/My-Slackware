#!/bin/bash

sudo apt-get -y update
sudo apt-get -y install vim

curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

git clone https://github.com/CesarTavo/My-Slackware.git

cat My-Slackware/.vimrc > ~/.vimrc
cat My-Slackware/.zshrc > ~/.zshrc
cp My-Slackware/.oh-my-zsh/themes/tavzero.zsh-theme > ~/.oh-my-zsg/themes/tavzero.zsh-theme

cd && rm -rf My-Slackware
